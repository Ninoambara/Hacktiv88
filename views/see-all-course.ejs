    <div class="container mt-5">
      <h1>This is Hactiv88 All Course Menu</h1>
      <form class="text-right mb-4 form-select" action="/course/all" method="get">
        <label for="Category">Filter by Category:</label>
        <select name="search" id="degree">
          <option value="">All</option>
          <% categoryList.forEach((degree) => { %>
            <option value="<%= degree.name %>" ><%= degree.name %></option>
          <% }); %>
        </select>
        <button class="btn btn-primary" type="submit">Filter</button>
      </form>
    <div class="row">
      <% data.forEach((el) => { %>
        <div class="col-md-3 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= el.name %></h5>
              <h5 class="card-text cardPosition"><%=  %></h5>
              <p class="card-text education"><%= el.Category.name  %></p>
              <p class="card-text education"><%= el.duration %></p>
              <% if(!isAdmin) { %>
                <div class="d-flex justify-content-center mt-3">
                  <a href="/course/detail/<%= el.id %>" class="btn btn-outline-primary mr-2">Detail</a>
                </div>
             <% } %>
             <% if(isUser) { %>
                <div class="d-flex justify-content-center mt-3">
                <a href="/course/add/<%= el.id %>" class="btn btn-outline-success mr-2">Add course</a>
              </div>
              <% } %>
          
              <% if(isAdmin) { %>
                <div class="d-flex justify-content-center mt-3">
                  <!-- Tombol Edit -->
                  <a href="/course/edit/<%= el.id %>" class="btn btn-primary mr-2">Edit</a>
                  <!-- Tombol Delete -->
                  <a href="/course/delete/<%= el.id %>" class="btn btn-danger">Delete</a>
                </div>
              <% } %>
              
              
            </div>
          </div>
        </div>
      <% }) %>
    </div>

    <% if(!isAdmin && !isUser) { %>
      <a href="/"><button style="color: green">Back to Home</button></a>
    <% } %>

    <% if(isAdmin) { %>
        <a href="/course/admin/add"><button>Add New Course</button></a>
        <a href="/category/admin/add"><button>Add New Category</button></a>
        <a href="/category/admin/edit"><button>Edit Category</button></a>
